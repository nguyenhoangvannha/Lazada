<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.dangnhap.DangNhapActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:logo="@android:drawable/ic_menu_close_clear_cancel"
            app:title="@string/title_login_reg"
            app:titleTextColor="@color/material_color_blue_grey_100"
            app:titleMarginStart="@dimen/_22sdp"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/tabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabTextColor="@color/material_color_blue_grey_100"
            app:tabTextAppearance="@style/AppTheme.TextNormal"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pagerDangNhap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>